<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="123dp"
        app:borderWidth="0dp"
        app:tint="@color/white"
        android:backgroundTint="@color/yellow"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:translationZ="10dp"
        app:layout_constraintLeft_toLeftOf="@id/floating"
        app:layout_constraintRight_toRightOf="@id/floating"
        app:layout_constraintTop_toTopOf="@id/floating"
        app:layout_constraintBottom_toBottomOf="@id/floating"
        android:id="@+id/add"
        android:src="@drawable/ic_add_24" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/register_margin"
        android:layout_marginEnd="@dimen/register_margin"
        android:layout_marginTop="275dp"
        android:hint="@string/user_email_hint"
        android:layout_height="@dimen/register_height">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_toggle"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/register_margin"
        android:layout_marginEnd="@dimen/register_margin"
        android:layout_marginTop="@dimen/register_marginTop"
        android:hint="@string/user_password_hint"
        android:layout_height="@dimen/register_height">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_toggle"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/register_margin"
        android:layout_marginEnd="@dimen/register_margin"
        android:layout_marginTop="@dimen/register_marginTop"
        android:hint="@string/user_confirmPassword_hint"
        android:layout_height="@dimen/register_height">

        <EditText
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_toggle"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/gender"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        app:layout_constraintLeft_toLeftOf="@id/tvConfirm"
        app:layout_constraintTop_toBottomOf="@id/tvConfirm"
        android:layout_height="@dimen/register_height"
        app:layout_constraintRight_toRightOf="@+id/add"
        android:layout_marginRight="29dp"
        android:layout_marginTop="@dimen/register_marginTop"
        android:hint="Gender">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/location"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        app:layout_constraintLeft_toRightOf="@id/gender"
        app:layout_constraintTop_toBottomOf="@id/tvConfirm"
        app:layout_constraintRight_toRightOf="@+id/tvConfirm"
        android:layout_height="@dimen/register_height"
        android:layout_marginTop="@dimen/register_marginTop"
        android:layout_marginLeft="8dp"
        android:hint="Location">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            />

    </com.google.android.material.textfield.TextInputLayout>

